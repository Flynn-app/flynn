<div class="content-container">
  <div class="content offset-1 col-10 offset-sm-2 col-sm-8 offset-md-3 col-md-6 ">
    <div class="article-header">
      <h1> <%= @audio.title %></h1>
      <div class="original-link">
        <% if @audio.text_url.present? %>
          Article original sur <%= link_to @audio.text_url do  %>
            <%= URI.parse(@audio.text_url).host.sub(/\Awww\./, '') %>
            <% end %>
        <% end %>
      </div>
    </div>
    <div class="article-content">
      <% if @audio.text_html.nil? %>
        <%= @audio.text_to_transcript %>
      <% else %>
        <%= @audio.text_html.html_safe %>
      <% end %>
    </div>
  </div>
</div>
<div class="position-fixed fixed-bottom w-100">
  <%= render 'shared/audio_player', audio: @audio %>
</div>
