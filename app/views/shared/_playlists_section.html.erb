

<div class="playlists-container">
  <div class="playlists-title-section">
    <% if current_user %>
      <h2>Vos playlists</h2>
    <% else %>
      <h2>Playlists de user.firstname</h2>
    <% end %>
    <p class="playlists-count"><%= (1..12).to_a.sample %> playlists</p>
  </div>
  <div class="playlists-cards-container">
    <div class="add-playlist">
      <i class="fas fa-plus-circle"></i>
      <%= link_to 'Ajouter une playlist', new_user_playlist_path(@user) %>
    </div>

    <% if @user.playlists.exists? %>
      <%= render 'shared/playlist-card' %>
    <% end %>

  </div>

</div>

