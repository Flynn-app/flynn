<div class="container" id="audio_new">
    <ul>
      <li><a class="tab-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#url" role="tab" aria-controls="url" aria-selected="true">Depuis un lien</a></li>
      <li><a class="tab-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#copypaste" role="tab" aria-controls="copypaste" aria-selected="false">Depuis un texte brut</a></li>
    </ul>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="url" role="tabpanel" aria-labelledby="url-tab">
      <input class="form-control" type="text" placeholder="https://lemonde.fr => Mercury parser :-)" id="mercuryInput">
      <button type="button" class="btn btn-primary" id="mercuryButton">Envoyer via mercury</button>
    </div>
    <div class="tab-pane fade" id="copypaste" role="tabpanel" aria-labelledby="copypaste-tab">
      <%= simple_form_for(@audio) do |f| %>
        <%= f.input :title, placeholder: 'Ile-de-France : Combien ça coûte de se mettre au vélo ?' %>
        <%= f.input :text_to_transcript, as: :text, placeholder: '« A Paris à vélo on dépasse autos ! » Vélos en libre-service, essor de l’assistance électrique (VAE), grèves… Le vélo à la cote depuis quelques années en Ile-de-France.' %>
        <%= f.submit "Transcrire", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>




