<div class="col-10 col-sm-10 offset-sm-1 mt-5">
  <div class="playlists-cards-container playlists-page">
    <% @playlists.each do |playlist| %>
      <%= link_to user_playlist_path(playlist.user.nickname, playlist) do %>
        <div class="playlist-card-container">
          <%= render 'shared/playlist-card', playlist: playlist %>
          <div class="playlist-card-infos">
            <div class="title"><%= playlist.name %></div>
            <div class="description"><%= playlist.description %></div>
            <div class="count"><%= playlist.audios.count %> podcasts</div>
          </div>
        </div>
      <% end %>
    <% end %>



  </div>
</div>
